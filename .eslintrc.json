{
  "ecmaVersion": 7,
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "json"
  ],
  "env": {
    "browser" : true,
    "mocha"   : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "expect" : false,
    "should" : false,
    "sinon"  : false,
    "windows": false,
    "document": false
  },
  "rules": {
    "semi"                 : [1, "always"],
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 200, 2],
    "object-curly-spacing" : [2, "always"]
  }
}
